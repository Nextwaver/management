    function getCurrentValue(_SelectRows, _ColumnName) {
      @foreach (var RC in MC.Records)
        {
                <text>
                if ("@RC.RowID" == _SelectRows) {
                      @foreach (var CL in RC.Column)
                        {
                              <text>
